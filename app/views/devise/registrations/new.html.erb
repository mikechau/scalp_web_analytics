<h2>Sign up</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, :required => true, :autofocus => (true if session["devise.user_attributes"].nil?), :input_html => { :value => (session["devise.user_attributes"]["email"] unless session["devise.user_attributes"].nil?) } %>
    <%= f.input :password, :autofocus => (true unless session["devise.user_attributes"].nil?), :required => true %>
    <%= f.input :password_confirmation, :required => true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
